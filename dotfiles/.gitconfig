[user]
	name = Sigurd Dam Sonniks

[core]
  editor = vi

[alias]
  s  = status --short
  st = status
  ci = commit
  br = branch
	lg = log --graph --date=format:'%y-%m-%d' --pretty=tformat:'%C(auto)%h %Cgreen%cd%C(auto) %d%s'
	l  = lg -n 10
	lm = lg --merges

[merge]
	conflictStyle = diff3

[pull]
	ff = only
